{
  "name": "vfile-reporter-position",
  "version": "0.1.8",
  "author": "Bernhard Berger",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hocdoc/vfile-reporter-position"
  },
  "bugs": "https://github.com/Hocdoc/vfile-reporter-position/issues",
  "keywords": [
    "unist",
    "vfile",
    "vfile-reporter"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "dist",
    "!**.test.*"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "tsc -w",
    "build": "tsc",
    "test": "FORCE_COLOR=0 NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint --ext .js,.mjs,.ts,.mts .",
    "prepack": "tsc"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "~5.0.0",
    "vfile": "^5.3.7"
  },
  "dependencies": {
    "lodash.chunk": "^4.2.0",
    "chalk": "^5.3.0",
    "figures": "^5.0.0"
  },
  "peerDependencies": {
    "vfile": "^5.0.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": "off"
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [".ts"],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
